<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.catlbattery.alm.mapper.ResultMapper">
	<resultMap id="VoMap" type="ValueObject">
	  <id property="id" column="id" />
	  <result property="createdBy" column="CREATED_BY"/>
	  <result property="createdDate" column="CREATED_DATE"/>
	  <result property="modifiedBy" column="MODIFIED_BY"/>
	  <result property="modifiedDate" column="MODIFIED_DATE"/>
	</resultMap>
	<resultMap id="RoleMap" type="RoleVO" extends="VoMap">
		<result property="name" column="name" />
	  	<result property="description" column="description" />
	  	<association property="groups" resultMap="GroupMap" columnPrefix="group_" />
	</resultMap>
	<resultMap id="GroupMap" type="GroupVO" extends="VoMap">
		<result property="name" column="name"/>
		<result property="groupAdmin" column="GROUP_ADMIN"/>
		<association property="roles" resultMap="RoleMap" columnPrefix="role_" />
	</resultMap>
	<resultMap id="RuleMap" type="RuleVO" extends="VoMap">
		<result property="fieldName" column="FIELD_NAME"/>
		<result property="fieldValue" column="FIELD_VALUE"/>
		<result property="targetField" column="TARGET_FIELD"/>
		<result property="negation" column="NEGATION"/>
		<result property="operator" column="OPERATOR"/>
		<result property="parentId" column="PARENT_ID"/>
	</resultMap>
	<resultMap id="ConstraintMap" type="ConstraintVO" extends="VoMap">
		<result property="cnstraintMethod" column="CONSTRAINT_METHOD"/>
		<result property="ruleId" column="RULE_ID"/>
		<result property="constrainedField" column="CONSTRAINED_FIELD"/>
		<result property="allowedValues" column="ALLOWED_VALUES"/>
	</resultMap>
</mapper>